source 'https://github.com/CocoaPods/Specs.git'

# Uncomment the next line to define a global platform for your project
platform :ios, '10.0'

target 'Users' do

  # UI
  pod 'SVProgressHUD', '2.2.5' # A clean and lightweight progress HUD for your iOS and tvOS app.
  pod 'SnapKit', '5.0.0' #  Swift Autolayout DSL

  # Reactive Programming
  pod 'RxSwift'
  pod 'RxCocoa'
  
  # Crash reporting & beta deployment
  # pod 'Fabric', '1.10.2'
  # pod 'Crashlytics'

  # Utils
  pod 'SwiftLint', '0.27.0' # A tool to enforce Swift style and conventions.
  #pod 'KeychainSwift', '9.0.2' # Helper functions for storing text in Keychain for iOS, macOS, tvOS and WatchOS
  pod 'R.swift', '5.2.2' # Get strong typed, autocompleted resources like images, fonts and segues in Swift projects
  pod 'Differ', '~> 1.3.0' # Calculates diff between two collections

  use_frameworks!
  pod 'ReachabilitySwift'

end
